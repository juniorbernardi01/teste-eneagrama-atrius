  function uniq(arr){
    const out=[]; const seen=new Set();
    for(const x of arr){
      const k=(x||"").toLowerCase().trim();
      if(!k || seen.has(k)) continue;
      seen.add(k); out.push(x);
    }
    return out;
  }
  function limit(arr, n){ return arr.slice(0,n); }

